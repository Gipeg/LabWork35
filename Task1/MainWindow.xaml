<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <StackPanel VerticalAlignment="Center">
        <TextBox x:Name="textBox" AcceptsReturn="True" Height="350"/>
        <Button x:Name="OpenButton" Content="Открыть" HorizontalAlignment="Center" Click="OpenButton_Click"/>
        <Button x:Name="SaveButton" Content="Сохранить" HorizontalAlignment="Center" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
